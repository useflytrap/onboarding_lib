{
	"name": "onboarding-lib",
	"version": "0.0.1",
	"description": "An onboarding library with form validation, schema validation using Zod and persistance with unstorage.",
	"private": true,
	"repository": "useflytrap/onboarding-lib",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.mjs",
			"require": "./dist/index.cjs"
		}
	},
	"main": "./dist/index.cjs",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.ts",
	"files": [
		"dist"
	],
	"author": "skoshx <rasmus@skosh.dev>",
	"license": "MIT",
	"type": "module",
	"keywords": [
		"typescript",
		"human-friendly",
		"logs",
		"api",
		"error",
		"logging",
		"error-handling"
	],
	"scripts": {
		"dev": "vitest dev",
		"dev:website": "pnpm --filter website dev",
		"build": "unbuild",
		"build:website": "pnpm --filter website build",
		"test": "pnpm test:core && pnpm test:types",
		"test:core": "vitest run",
		"test:types": "tsc --noEmit",
		"test:coverage": "vitest run --coverage",
		"lint": "pnpm eslint --fix --ext .ts,.js,.mjs,.cjs \"{src,test}/**/*.{js,json,ts}\"",
		"format:write": "prettier --write \"**/*.{ts,tsx,mdx}\" --cache",
		"format:check": "prettier --check \"**/*.{ts,tsx,mdx}\" --cache",
		"prepublishOnly": "pnpm lint && pnpm test",
		"release": "np"
	},
	"dependencies": {
		"@hookform/resolvers": "^3.3.4",
		"@radix-ui/react-label": "^2.0.2",
		"@radix-ui/react-slot": "^1.0.2",
		"clsx": "^2.1.0",
		"react": "^18.2.0",
		"react-hook-form": "^7.49.3",
		"tailwind-merge": "^2.2.1",
		"unstorage": "^1.10.1",
		"zod": "^3.21.4"
	},
	"devDependencies": {
		"@ianvs/prettier-plugin-sort-imports": "^3.7.2",
		"@types/node": "^18.16.0",
		"@types/react": "^18.2.45",
		"@types/react-dom": "18.0.6",
		"autoprefixer": "^10.4.14",
		"eslint": "^8.39.0",
		"eslint-config-next": "13.0.0",
		"eslint-config-prettier": "^8.8.0",
		"eslint-plugin-react": "^7.32.2",
		"eslint-plugin-tailwindcss": "^3.11.0",
		"postcss": "^8.4.23",
		"prettier": "^2.8.8",
		"prettier-plugin-tailwindcss": "^0.1.13",
		"typescript": "^5.3.3"
	}
}
